@model ForgetPasswordViewModel
<h1 class="text-info">Forgot Your Password ?</h1>

<div class="row">
    <div class="col-md-8">
        <form asp-controller="Account" asp-action="ForgotPassword"  method="post" role="form">

            <h4>Enter Your Email.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="col-md-2"></label>
                <div class="col-md-10"></div>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <div class=" col-md-2">
                    <button type="submit" class="btn btn-success form-control">Submit</button>
                </div>
            </div>

        </form>
    </div>
</div>




@section Scripts{
    @*this validation It is checked by the client*@
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial"); /*Using java script to help on validation  */
    }
    }